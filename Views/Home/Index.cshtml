@model Chef[]

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/style.css"/>
    <title>Welcome</title>
</head>

<body>
    <div class="container" style="margin-top:3%; text-align:center">
        <div class="topline">
            <h1 style="display: inline-block;"> Chefs | <a href="/dishes"> Dishes </a> </h1>
            <h5 style="display: inline-block; margin-left:30%"><a href="/addChef"> Add a Chef </a></h5>
        </div>
        <div style="margin-top: 3%;">
            <h1 style="text-decoration: underline;">Check out all of our chefs!</h1>
        </div>
        <div class="table">
            <table>
                <thead>
                    <th>Name</th>
                    <th>Age</th>
                    <th># of Dishes</th>
                </thead>
                <tbody>
                    @{
                    @foreach(Chef item in Model)
                    {
                        DateTime now = DateTime.Today;
                        int age = now.Year - @item.Birthday.Year;
                    <tr> <td> @item.FirstName @item.LastName </td> <td> @age </td> <td> @item.CreatedDishes.Count </td> </tr>
                    }
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>

</html>
