@model Dish

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css"/>
    <title>Add a Dish</title>
</head>
<body>
<div class="container">
    <div class="title">
        <h1> Add a Dish! </h1>
    </div>
    <a href="/dishes"> Home </a>
    <div class="dishForm">
        <form asp-action="CreateDish" asp-controller="Home" method="POST">
            <div class="form-group">
                <label for="Name">Dish Name: </label>
                <input asp-for="Name" class="form-control">
                <span class="col-sm-12 text-danger" asp-validation-for="Name"></span>
            </div>
            <div>
                <label for="Calories"># of Calories: </label>
                <input asp-for="Calories" class="form-control">
                <span class="col-sm-12 text-danger" asp-validation-for="Calories"></span>
            </div>
            <div>
                <label for="Chef">Chef: </label>
                <select asp-for="ChefId" class="form-control">
                    @foreach(var chefs in ViewBag.Chefs)
                    {
                        <option value="@chefs.ChefId"> @chefs.FirstName @chefs.LastName </option>
                    }
                </select>
                <span class="col-sm-12 text-danger" asp-validation-for="ChefId"></span>
            </div>
            <div>
                <label for="Taste">Tastiness: </label>
                <select asp-for="Taste" class="form-control">
                    <option value="1">1</option>
                    <option value="1">2</option>
                    <option value="1">3</option>
                    <option value="1">4</option>
                    <option value="1">5</option>
                </select>
                <span class="col-sm-12 text-danger" asp-validation-for="Taste"></span>
            </div>
            <div>
                <label for="Description">Description: </label>
                <textarea cols="60" rows="3" asp-for="Description" class="form-control"></textarea>
                <span class="col-sm-12 text-danger" asp-validation-for="Description"></span>
            </div>
            <button class="btn btn-success btn-md"> FOOD ME! </button>
        </form>
    </div>
</div>
</body>
</html>