@model Dish[]

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/style.css"/>
    <title>All Dishes</title>
</head>

<body>
    <div class="container" style="margin-top:3%; text-align:center">
        <div class="topline">
            <h1 style="display: inline-block;"> <a href="/"> Chefs </a> | Dishes </h1>
            <h5 style="display: inline-block; margin-left:30%"><a href="/addDish"> Add a Dish </a></h5>
        </div>
        <div style="margin-top: 3%;">
            <h1 style="text-decoration: underline;"> Yum, look at all these tasty dishes! </h1>
        </div>
        <div class="table">
            <table>
                <thead>
                    <th>Name</th>
                    <th>Chef</th>
                    <th>Tastiness</th>
                    <th>Calories</th>
                </thead>
                <tbody>
                    @foreach(Dish item in Model)
                    {
                    <tr> <td> @item.Name </td> <td> @item.Creator.FirstName @item.Creator.LastName </td> <td> @item.Taste </td> <td> @item.Calories</td> </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>

</html>